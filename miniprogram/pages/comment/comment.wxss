/* pages/comment/comment.wxss */
.detail-container{
  width: 100%;
  height: 400rpx;
  padding: 10rpx;
  filter: blur(40rpx);
  opacity: .4;
}
.detail-mask{
  width:100%;
  height: 400rpx;
  position: absolute;
  top:0;
  left:0;
  z-index: -1;
  background-color: #333;
}
.detail-info{
  width:100%;
  height: 400rpx;
  position: absolute;
  top:0;
  left:0;
  z-index:1002;
  padding: 10rpx;
  display: flex;
  color: #fff;
}
.detail-img{
  height: 380rpx;
  width: 300rpx;
  margin-right: 20rpx;
}
.mini{
  font-size: 20rpx;
  padding: 10rpx;
}
.img-content{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.contentBox{
  display:flex;
  padding:10rpx;
  align-items:center;
}
.headImg{
  width:100rpx;
  height:100rpx;
  margin-right:20rpx;
  border-radius:50%;
}
.review{
  font-size:20rpx;
  display:block;
   overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;/*超出部分文字以...显示*/
}
.reviewImg{
  width:80rpx;
  height:80rpx;
  padding:10rpx;
}